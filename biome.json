{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"useIgnoreFile": true,
		"clientKind": "git"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noDefaultExport": "error",
				"useFragmentSyntax": {
					"fix": "safe",
					"level": "error"
				},
				"useConsistentArrayType": {
					"fix": "safe",
					"level": "warn",
					"options": {
						"syntax": "generic"
					}
				}
			},
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"noUnusedFunctionParameters": "error",
				"useHookAtTopLevel": "error"
			},
			"nursery": {
				"useSortedClasses": {
					"fix": "safe",
					"level": "warn",
					"options": {
						"functions": ["cn", "clsx"]
					}
				},
				"useConsistentCurlyBraces": {
					"fix": "safe",
					"level": "error"
				},
				"noEnum": "error"
			}
		}
	},
	"overrides": [
		{
			"include": [
				"app/**/default.*",
				"app/**/error.*",
				"app/**/forbidden.*",
				"app/**/global-error.*",
				"app/**/layout.*",
				"app/**/loading.*",
				"app/**/not-found.*",
				"app/**/page.*",
				"app/**/template.*",
				"app/**/unauthorized.*",
				"next.config.*",
				"tailwind.config.*",
				"postcss.config.*",
				"playwright.config.*",
				"vitest.config.*"
			],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		}
	]
}
