{
  "exclude": ["node_modules, .next, .vercel"],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "~components": ["./components"],
      "~contexts": ["./contexts"],
      "~config": ["./config"],
      "~hooks": ["./hooks"],
      "~lib": ["./lib"],
      "~lib/*": ["./lib/*"],
      "~middleware": ["./middleware"],
      "~models": ["./models"],
      "~models/*": ["./models/*"],
      "~prisma/*": ["../prisma/*"],
      "~styles/*": ["./styles/*"],
      "~types": ["./types"],
      "~util/*": ["./util/*"]
    },
    "target": "es5",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": ["types"],
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js",
    "**/*.js",
    "**/*.jsx"
  ]
}
